<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post" action="/login">
                <h2>Login</h2>
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input name="username" type="text" id="username" class="form-control" placeholder="Inserisci il tuo username" value="{{username}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input name="password" type="password" id="password" class="form-control" placeholder="Inserisci la tua password" value="{{password}}" required>
                </div>
                {{#if errorMessage}}
                    <p id="error">{{errorMessage}}</p>
                {{/if}}
                <button type="submit" class="btn btn-primary">Login</button>
                <p>Non hai un account? <a href="/signup">Crealo!</a></p>
            </form>
        </div>
    </div>
</div>