<div id="space"></div>
<main class="text-center h-100">
    {{#if noNotifications}}
        <img id="emptyImage" src="noNotification.svg" alt="">
        <h1>Non sono presenti notifiche</h1>
    {{else}}
        <div id="space"></div>

        <h1>Notifiche</h1>

        <div class="text-center mt-5">
            <div class="d-flex justify-content-center">
                <table>
                    {{#each notifications}}
                        <tr>
                            <td>{{message}}</td>
                            <td>{{date}}</td>
                        </tr>
                    {{/each}}
                </table>
            </div>

            <div class="d-flex justify-content-center mt-4">
                {{>partials/pagination.hbs}}
            </div>
        </div>
    {{/if}}
</main>