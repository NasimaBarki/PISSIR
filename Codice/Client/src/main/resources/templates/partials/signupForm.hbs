<div class="container form" id="signupForm">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <form method="post">
                <h2>REGISTRATI</h2>
                <div class="form-group">
                    <label for="name">Nome:</label>
                    <input name="name" type="text" id="name" class="form-control" placeholder="Inserisci il tuo name"
                        value="{{name}}" required>
                </div>
                <div class="form-group">
                    <label for="surname">Cognome:</label>
                    <input name="surname" type="text" id="surname" class="form-control"
                        placeholder="Inserisci il tuo surname" value="{{surname}}" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input name="email" type="email" id="email" class="form-control"
                        placeholder="Inserisci la tua email" value="{{email}}" required>
                </div>
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input name="username" type="text" id="username" class="form-control"
                        placeholder="Inserisci il tuo username" value="{{username}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input name="password" type="password" id="password" class="form-control"
                        placeholder="Inserisci la tua password" value="{{password}}" required>
                </div>
                {{#if errorMessage}}
                <p id="error">{{errorMessage}}</p>
                {{/if}}
                <button type="submit">Registrati</button>
            </form>
        </div>
    </div>
</div>